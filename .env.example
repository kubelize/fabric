# Proxmox Configuration
PROXMOX_ENDPOINT=https://proxmox.example.com:8006
PROXMOX_NODE=pve
PROXMOX_INSECURE=true

# Authentication - Choose one method:

# Method 1: Username/Password
PROXMOX_USERNAME=root@pam
PROXMOX_PASSWORD=your-password-here

# Method 2: API Token (recommended)
# Create in Proxmox: Datacenter → Permissions → API Tokens
PROXMOX_API_TOKEN=root@pam!mytoken=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Storage Configuration
PROXMOX_STORAGE=local-zfs
PROXMOX_BRIDGE=vmbr0

# Template VM IDs (get these from: qm list)
# Update these with your actual template IDs!
TEMPLATE_NIXOS_23_11=9000
TEMPLATE_NIXOS_24_05=9001

# Network Configuration
NETWORK_GATEWAY=10.0.1.1
NETWORK_DNS_PRIMARY=10.0.1.10
NETWORK_DNS_SECONDARY=1.1.1.1

# Git Repository (for NixOS configs)
GIT_REPO_URL=git+https://github.com/kubelize/fabric
GIT_BRANCH=main

# SSH Key (for VM access)
SSH_PUBLIC_KEY="ssh-ed25519 AAAAC3NzaC1lZDI1NTE5... admin@homelab"

# Kubernetes Namespace
K8S_NAMESPACE=infra-machines
